        <script type="text/javascript" src="//cdn.jsdelivr.net/jquery.slick/1.6.0/slick.min.js"></script>
        <script src="{{ asset('bundles/wecrea/js/wecrea.js') }}"></script>
        {% block javascripts %}{% endblock %}
        {% block js_admin %}{% endblock %}
