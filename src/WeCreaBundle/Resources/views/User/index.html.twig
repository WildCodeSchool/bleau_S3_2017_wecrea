{% extends '@WeCrea/layout/base_client.html.twig' %}

{% block body %}
    <main>
        <div class="container">
            <div class="slider fullscreen slider_custom">
                <ul class="slides">
                    {% for carrousel in carrousels %}
                        <li>
                            <a href="{{ carrousel.rout }}" target="_blank">
                                <img src="{{ carrousel.image_url | imagine_filter('xLarge') }}" alt="{{ carrousel.image_alt }}">
                                <div class="caption left-align caption_custom">
                                    <h3 style="color: {% if carrousel.fontColor is not null %}{{ carrousel.fontColor }}{% endif %}">{{ carrousel.title }}</h3>
                                    <p style="color: {% if carrousel.fontColor is not null %}{{ carrousel.fontColor }}{% endif %}">{{ carrousel.content }}</p>
                                </div>
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
    </main>
{% endblock %}
