{% extends '@WeCrea/layout/base_admin.html.twig' %}

{% block body %}

    <div class="container container-custom-artists">
        <h4 style="text-align: center; background: tomato; color: #fff; padding: 10px;">Édition du concept</h4>
        <div class="row row_custom">
            <div class="col m10 offset-m1">
                {{ form_start(form) }}
                <div class="input-field">
                    {{ form_label(form.title, 'Titre') }}
                    {{ form_widget(form.title) }}
                    {{ form_errors(form.title) }}
                </div>
                <div class="input-field">
                    {{ form_label(form.content, 'Contenu') }}
                    {{ form_widget(form.content) }}
                    {{ form_errors(form.content) }}
                </div>
                <div class="input-field">
                    {{ form_label(form.images.alt, "légende image et/ou mots clés") }}
                    {{ form_widget(form.images.alt) }}
                    {{ form_errors(form.images.alt) }}
                </div>
                {{ form_label(form.images.url, "Image") }}
                <div class="file-field input-field col s12">
                    <div class="btn btn-file">
                        <span>Choisissez un fichier</span>
                        <input type="file">
                    </div>
                    <div class="file-path-wrapper">
                        {{ form_widget(form.images.url, {'attr' : {'class' : 'file-path validate', 'type' : 'text'}} ) }}
                    </div>
                    {{ form_errors(form.images.url) }}
                </div>
                <div id="images-check"></div>
                <div>
                    <img id="conceptImg" src="{{ asset('images/'~concept.images.url) }}" alt="concept image" />
                </div>
                <div>
                    <button class="btn waves-effect waves-light right black" type="submit" name="action">
                        Valider la modification
                        <i class="material-icons left">add</i>
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

{% endblock %}